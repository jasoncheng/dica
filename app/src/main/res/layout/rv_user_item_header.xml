<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

  <ImageView
          android:layout_width="@dimen/user_page_profile_avatar"
          android:layout_height="@dimen/user_page_profile_avatar" tools:srcCompat="@tools:sample/avatars"
          android:id="@+id/avatar" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
          app:layout_constraintTop_toTopOf="parent"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
          android:id="@+id/tv_status_user_name" android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/avatar"
          android:textAppearance="@android:style/TextAppearance.Material.Title" android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp" android:drawableStart="@drawable/user_name"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tv_description"
          android:padding="4dp"
          android:textColor="#333"
          android:autoLink="all"
          android:maxLines="8"
          android:scrollbars="vertical"
          app:layout_constraintTop_toBottomOf="@+id/tv_status_user_name" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp"
          android:layout_marginTop="4dp"
          android:textAlignment="center"
          android:drawableStart="@drawable/user_desc"/>
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#999"
          android:padding="6dp"
          android:textStyle="bold|italic"
          android:id="@+id/tv_sitename"
          android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/tv_description"
          android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
          android:drawableStart="@drawable/user_sitename"/>
</androidx.constraintlayout.widget.ConstraintLayout>